<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/product_item"
    android:paddingHorizontal="@dimen/big_padding"
    android:paddingVertical="@dimen/small_padding">
    <TextView
        android:id="@+id/product_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@id/product_item_stock"
        android:paddingBottom="@dimen/normal_padding"
        android:textColor="@color/black"
        android:textSize="@dimen/normal_text_size" />
    <TextView
        android:id="@+id/product_item_stock"
        android:layout_width="@dimen/stock_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textAlignment="textEnd"
        android:padding="@dimen/small_padding"
        android:textColor="@color/gray"
        android:textSize="@dimen/super_small_text_size" />
</RelativeLayout>