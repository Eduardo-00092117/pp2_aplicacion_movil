<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/small_padding"
    app:cardCornerRadius="@dimen/small_padding">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/normal_small_padding"
        android:paddingVertical="@dimen/normal_small_padding">
        <LinearLayout
            android:id="@+id/product_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="50dp">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="122dp"
                android:layout_height="119dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/small_padding"
                app:srcCompat="@drawable/ic_launcher_background" />
            <TextView
                android:id="@+id/product_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/Lightgolden"
                android:textSize="@dimen/normal_text_size"
                android:layout_marginTop="@dimen/small_padding"
                android:layout_marginHorizontal="@dimen/small_padding"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/price_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/super_big_padding">
            <TextView
                android:id="@+id/product_item_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:textSize="@dimen/small_text_size"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/product_item"
                android:layout_width="@dimen/add_product_dimen"
                android:layout_height="@dimen/add_product_dimen"
                android:layout_alignParentEnd="true"
                app:srcCompat="@drawable/ic_baseline_add_shopping_cart_24"
                android:background="?selectableItemBackgroundBorderless"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>