<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/service_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="@dimen/small_padding"
    app:cardCornerRadius="@dimen/small_padding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/normal_small_padding"
        android:paddingVertical="@dimen/normal_small_padding">
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/service_dimen"
            android:layout_height="@dimen/service_dimen"
            app:srcCompat="@drawable/ic_launcher_background"
            android:layout_marginTop="@dimen/small_padding"
            android:layout_gravity="center"/>
        <CheckBox
            android:id="@+id/service_item_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>